        <Typescript class={ICON_CLASS} />
        <Python class={ICON_CLASS} />
        <Apollographql class={ICON_CLASS} />
        <Trpc class={ICON_CLASS} />
        <Docker class={ICON_CLASS} />
        <Twilio class={ICON_CLASS} />
        <Socketdotio class={ICON_CLASS} />
        <Snowflake class={ICON_CLASS} />
        <Metabase class={ICON_CLASS} />
        <Datadog class={ICON_CLASS} />
