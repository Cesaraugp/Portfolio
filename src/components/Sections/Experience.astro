---
import { Briefcase } from "astro-feather-icons";
import {
  Amazonaws,
  Amazondynamodb,
  Apollographql,
  Awslambda,
  Discord,
  Docker,
  Firebase,
  Javascript,
  Jest,
  Mongodb,
  Mysql,
  Nestjs,
  Nextdotjs,
  Nodedotjs,
  Nx,
  Php,
  Prisma,
  Puppeteer,
  React,
  Redis,
  Redux,
  Serverless,
  Trpc,
  Typescript,
  Wix,
  Wordpress,
  Yarn,
} from "simple-icons-astro";
import ExperienceItem from "../ExperienceItem.astro";
import TechnologiesWrapper from "../TechnologiesWrapper.astro";
---

<section class="w-full">
  <header
    class="font-bold text-2xl text-indigo-500 dark:text-gray-100 mb-6 flex items-center gap-3 mt-6"
  >
    <h2>Experience</h2>
    <Briefcase size="24" />
  </header>
  <div class="ml-2">
    <ExperienceItem
      title="Fullstack Engineer"
      to="Actual"
      from="Aug 2023"
      company={{ name: "Keep", link: "https://trykeep.com" }}
      featuredResponsabilities={[
        "Integration with Hubspot CRM via Segment",
        "Made the app mobile responsive",
      ]}
    >
      <TechnologiesWrapper slot="technologies">
        <Amazonaws class="fill-indigo-400 dark:fill-white" />
        <Jest class="fill-indigo-400 dark:fill-white" />
        <Nextdotjs class="fill-indigo-400 dark:fill-white" />
        <Prisma class="fill-indigo-400 dark:fill-white" />
        <Mysql class="fill-indigo-400 dark:fill-white" />
        <Mongodb class="fill-indigo-400 dark:fill-white" />
        <Typescript class="fill-indigo-400 dark:fill-white" />
        <Apollographql class="fill-indigo-400 dark:fill-white" />
        <Trpc class="fill-indigo-400 dark:fill-white" />
        <Docker class="fill-indigo-400 dark:fill-white" />
        <Yarn class="fill-indigo-400 dark:fill-white" />
      </TechnologiesWrapper>
    </ExperienceItem>

    <ExperienceItem
      title="Fullstack Engineer"
      from="Dic 2021"
      to="Aug 2023"
      company={{ name: "Sundevs", link: "https://sundevs.com" }}
      featuredResponsabilities={[]}
      subRoles={[
        {
          title: "Ssr Advanced Fullstack Engineer",
          featuredResponsabilities: [
            "Integrated a Payment Gateway Provider, cutting Chargeback expenses by 99.4% through the implementation of AVS.",
            "Launched a robust back-office platform for Call Center Agents, with monthly sales exceeding $200,000.",
            "Development of a Websockets Integration that reduced the Customer Purchase Cycle Time up to 40%.",
          ],
          from: "Dic 2022",
          to: "Aug 2023",
        },
        {
          title: "Ssr Fullstack Engineer",
          featuredResponsabilities: [
            "Integrated Stripe Payments including Invoices, Payment Links and Payment Intents.",
            "Built a whole in-house invoices system.",
            "Development of a menu abstraction from the client's POS system which reduced the payload size up to 82.86%.",
          ],
          from: "Mar 2022",
          to: "Dic 2022",
        },
        {
          title: "Junior Fullstack Engineer",
          featuredResponsabilities: [
            "Maintenance and enhacements of core microservices, including Payments, Ordering, Loyalty, and Delivery.",
            "Integrated Doordash, allowing the business to open a new ordering channel which represents 10% of sales.",
            "Resolution of important bugs over the Scheduled Payments Ordering for Catering, reducing system errors up to 0%.",
          ],
          from: "Dic 2021",
          to: "Mar 2022",
        },
      ]}
    >
      <TechnologiesWrapper slot="technologies">
        <Amazonaws class="fill-indigo-400 dark:fill-white" />
        <Awslambda class="fill-indigo-400 dark:fill-white" />
        <Amazondynamodb class="fill-indigo-400 dark:fill-white" />
        <Serverless class="fill-indigo-400 dark:fill-white" />
        <Nestjs class="fill-indigo-400 dark:fill-white" />
        <Jest class="fill-indigo-400 dark:fill-white" />
        <React class="fill-indigo-400 dark:fill-white" />
        <Redux class="fill-indigo-400 dark:fill-white" />
        <Typescript class="fill-indigo-400 dark:fill-white" />
        <Mongodb class="fill-indigo-400 dark:fill-white" />
        <Redis class="fill-indigo-400 dark:fill-white" />
        <Nx class="fill-indigo-400 dark:fill-white" />
      </TechnologiesWrapper>
    </ExperienceItem>
    <ExperienceItem
      title="Javascript Developer"
      from="Jun 2021"
      to="Dic 2021"
      company={{ name: "Assett+", link: "https://www.assett.ca/" }}
      featuredResponsabilities={[
        "Development of a stocks options portfolio bot for Telegram, with daily updates, data scrapping and graphs.",
        "Development of a membership management bot for Discord, with email verification and role auto-upgrade based on membership changes.",
        "Certified as Velo Developer, which promoted the company to Legend Partner.",
      ]}
    >
      <TechnologiesWrapper slot="technologies">
        <Wix class="fill-indigo-400 dark:fill-white" />
        <Javascript class="fill-indigo-400 dark:fill-white" />
        <Nodedotjs class="fill-indigo-400 dark:fill-white" />
        <Mongodb class="fill-indigo-400 dark:fill-white" />
        <Puppeteer class="fill-indigo-400 dark:fill-white" />
        <Discord class="fill-indigo-400 dark:fill-white" />
        <React class="fill-indigo-400 dark:fill-white" />
        <Typescript class="fill-indigo-400 dark:fill-white" />
      </TechnologiesWrapper>
    </ExperienceItem>
    <ExperienceItem
      title="Web Developer"
      from="Nov 2020"
      to="Jun 2021"
      company={{ name: "Ponceleon Software" }}
      featuredResponsabilities={[]}
    >
      <TechnologiesWrapper slot="technologies">
        <Wordpress class="fill-indigo-400 dark:fill-white" />
        <Php class="fill-indigo-400 dark:fill-white" />
        <Nodedotjs class="fill-indigo-400 dark:fill-white" />
        <Javascript class="fill-indigo-400 dark:fill-white" />
        <Firebase class="fill-indigo-400 dark:fill-white" />
      </TechnologiesWrapper>
    </ExperienceItem>
  </div>
</section>
