---
import { Briefcase } from "astro-feather-icons";
import {
  Amazonaws,
  Amazondynamodb,
  Apollographql,
  Awslambda,
  Cypress,
  Datadog,
  Discord,
  Docker,
  Firebase,
  Javascript,
  Jest,
  Metabase,
  Mongodb,
  Mysql,
  Nestjs,
  Nextdotjs,
  Nodedotjs,
  Nx,
  Php,
  Prisma,
  Puppeteer,
  Python,
  React,
  Redis,
  Redux,
  Serverless,
  Snowflake,
  Socketdotio,
  Sqlite,
  Trpc,
  Twilio,
  Typescript,
  Wix,
  Wordpress,
