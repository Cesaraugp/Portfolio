    <Briefcase size="24" />
  </header>
  <div class="ml-2">
    <ExperienceItem {...EXPERIENCES[0]}>
      <TechnologiesWrapper slot="technologies">
        <Amazonaws class={ICON_CLASS} />
        <Jest class={ICON_CLASS} />
