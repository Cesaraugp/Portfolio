---
import { Status } from "../Badge.astro";

interface Props {
  title: string;
  description: string;
  status: Status;
}
const { title, description, status } = Astro.props;

import Avatar from "../Avatar.astro";
import Badge from "../Badge.astro";
import ResumeButton from "../Buttons/Resume.astro";
import ProfileDescription from "../ProfileDescription.astro";
const PROFILE_PICTURE_PATH = "public/assets/avatar.jpg";
---

<section class="flex flex-col sm:flex-row items-center gap-5">
  <Avatar src={PROFILE_PICTURE_PATH} srcset={PROFILE_PICTURE_PATH} />
  <div class="flex flex-col items-center sm:items-start gap-3">
    <ProfileDescription title={title} description={description} />
    <div class="flex gap-3">
      <div class="relative group/tooltip">
        <Badge status={status} />
      </div>
      <ResumeButton
        href="cesar_perez_fullstack_engineer.pdf"
        downloadFileName="CV-Cesar-Perez.pdf"
      />
    </div>
  </div>
</section>
